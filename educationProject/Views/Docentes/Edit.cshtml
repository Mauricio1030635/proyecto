
@model educationProject.Models.Docente

@{
    ViewData["Title"] = "Modificar";
}

<div class="container">
    <div class="card">
        <div class="card-header  text-white bg-info">
            <i class="fas fa-user-tie"></i>
            Formulario
        </div>
        <div class="card-body   ">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdDocente" />
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CedulaDocente" class="control-label"></label>
                        <input asp-for="CedulaDocente" class="form-control" />
                        <span asp-validation-for="CedulaDocente" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NombreDocente" class="control-label"></label>
                        <input asp-for="NombreDocente" class="form-control" />
                        <span asp-validation-for="NombreDocente" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="ApellidoDocente" class="control-label"></label>
                        <input asp-for="ApellidoDocente" class="form-control" />
                        <span asp-validation-for="ApellidoDocente" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="TelefonoDocente" class="control-label"></label>
                        <input asp-for="TelefonoDocente" class="form-control" />
                        <span asp-validation-for="TelefonoDocente" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="DireccionDocente" class="control-label"></label>
                        <input asp-for="DireccionDocente" class="form-control" />
                        <span asp-validation-for="DireccionDocente" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NivelEducativo" class="control-label"></label>
                        <select asp-for="NivelEducativo" class="form-control">
                            <option value="Profesional">Nivel Profesional</option>
                            <option value="Especializacion">Especializacion</option>
                            <option value="Maestría">Maestria</option>
                            <option value="Doctorado">Doctorado</option>
                        </select>
                        <span asp-validation-for="NivelEducativo" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <div class="form-group col-md-5">
                        <button type="submit" class="btn btn-warning  btn-block">
                            Modificar  &nbsp; <i class="fas fa-database"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    <div class="mt-2">
        <a class="btn btn-danger" asp-controller="Docentes" asp-action="Index"> <i class="fas fa-backward"></i> Atras</a>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
