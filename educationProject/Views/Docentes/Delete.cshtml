@model educationProject.Models.Docente

@{
    ViewData["Title"] = "Eliminar";
}

<div class="alert alert-warning" role="alert">
    <h3>Deseas eliminar este usuario?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CedulaDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CedulaDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApellidoDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TelefonoDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefonoDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DireccionDocente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DireccionDocente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NivelEducativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NivelEducativo)
        </dd>
    </dl>
    <hr>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdDocente" />
        <button type="submit"  class="btn btn-danger">
            <span class="text-white">Eliminar&nbsp;<i class="fas fa-trash"> </i>
            </span>            
        </button> 
        <a asp-action="Index" class="btn btn-primary" >Volver</a>
    </form>    
</div>
